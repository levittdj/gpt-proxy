# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key

# Apple HealthKit Configuration
APPLE_HEALTH_CLIENT_ID=your_apple_health_client_id
APPLE_HEALTH_CLIENT_SECRET=your_apple_health_client_secret

# Eight Sleep API Configuration
EIGHT_SLEEP_API_KEY=your_eight_sleep_api_key
EIGHT_SLEEP_USER_ID=your_eight_sleep_user_id

# MyFitnessPal API Configuration
MYFITNESSPAL_API_KEY=your_myfitnesspal_api_key
MYFITNESSPAL_USERNAME=your_myfitnesspal_username

# Google APIs Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Google Calendar Configuration
GOOGLE_CALENDAR_ID=primary

# Google Sheets Configuration
GOOGLE_SHEETS_SPREADSHEET_ID=your-spreadsheet-id-here
GOOGLE_SERVICE_ACCOUNT_KEY_FILE=/path/to/service-account-key.json

# Application Configuration
PORT=3000
NODE_ENV=development

# Database Configuration (if needed)
DATABASE_URL=your_database_url_here

# Security Configuration
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# Health Auto Export Configuration
HEALTH_AUTO_EXPORT_DATA_PATH=/path/to/health/auto/export/data

# Fitness Agent API key used by HTTP endpoints
FITNESS_AGENT_API_KEY="replace_with_your_secret_key" 